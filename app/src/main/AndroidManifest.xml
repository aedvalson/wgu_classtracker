<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aedvalson.classtracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

        <!-- DB Provider -->
        <provider
            android:name=".DataProvider"
            android:authorities="com.aedvalson.classtracker.dataprovider"
            android:exported="false" />

        <!-- Alarm Provider -->
        <receiver android:name=".AlarmHandler" />

        <!-- Activities -->
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TermListActivity"
            android:label="@string/term_list"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".TermViewerActivity"
            android:label="@string/title_activity_term_viewer"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TermListActivity" />
        </activity>
        <activity
            android:name=".TermEditorActivity"
            android:label="@string/title_activity_term_editor"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TermViewerActivity" />
        </activity>
        <activity
            android:name=".CourseListActivity"
            android:label="Course List"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TermViewerActivity" />
        </activity>
        <activity
            android:name=".CourseViewerActivity"
            android:label="@string/title_activity_course_viewer"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CourseListActivity" />
        </activity>
        <activity
            android:name=".CourseEditorActivity"
            android:label="@string/title_activity_course_editor"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CourseViewerActivity" />
        </activity>
        <activity
            android:name=".CourseNoteListActivity"
            android:label="@string/title_activity_course_note_list"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aedvalson.classtracker.CourseViewerActivity" />
        </activity>
        <activity
            android:name=".AssessmentListActivity"
            android:label="@string/title_activity_assessment_list"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aedvalson.classtracker.CourseViewerActivity" />
        </activity>
        <activity
            android:name=".AssessmentViewerActivity"
            android:label="@string/title_activity_assessment_viewer"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aedvalson.classtracker.AssessmentListActivity" />
        </activity>
        <activity
            android:name=".CourseNoteViewerActivity"
            android:label="@string/title_activity_course_note_viewer"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aedvalson.classtracker.CourseNoteListActivity" />
        </activity>
        <activity
            android:name=".AssessmentNoteListActivity"
            android:label="@string/title_activity_assessment_note_list"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AssessmentViewerActivity" />
        </activity>
        <activity
            android:name=".AssessmentNoteViewerActivity"
            android:label="@string/title_activity_assessment_note_viewer"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aedvalson.classtracker.AssessmentNoteListActivity" />
        </activity>
        <activity
            android:name=".AssessmentEditorActivity"
            android:label="@string/title_activity_assessment_editor"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aedvalson.classtracker.AssessmentViewerActivity" />
        </activity>
        <activity
            android:name=".CourseNoteEditorActivity"
            android:label="@string/title_activity_course_note_editor"
            android:parentActivityName=".CourseNoteListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aedvalson.classtracker.CourseNoteListActivity" />
        </activity>
        <activity
            android:name=".AssessmentNoteEditorActivity"
            android:label="@string/title_activity_assessment_note_editor"
            android:parentActivityName=".AssessmentNoteListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aedvalson.classtracker.AssessmentNoteListActivity" />
        </activity>
        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ImageListActivity"
            android:label="@string/title_activity_image_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>